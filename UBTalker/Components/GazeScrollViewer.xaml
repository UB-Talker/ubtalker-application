<ScrollViewer x:Class="UBTalker.Components.GazeScrollViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UBTalker.Components"
             xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             VerticalScrollBarVisibility="Hidden"
             HorizontalScrollBarVisibility="Hidden"
             Background="Black">

    <ScrollViewer.Resources>
        <Style x:Key="EyeXAutoPannableStyle" TargetType="FrameworkElement">
            <Setter Property="eyeX:Behavior.Pannable" Value="Default"/>
            <Setter Property="eyeX:Behavior.AvailablePanDirections" Value="All" />
            <Setter Property="eyeX:Behavior.PanningProfile" Value="Radial" />
            <Setter Property="eyeX:Behavior.AutoPan" Value="True" />
        </Style>
    </ScrollViewer.Resources>
</ScrollViewer>
